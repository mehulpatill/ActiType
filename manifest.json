{
  "manifest_version": 3,
  "name": "Clipboard AutoTyper",
  "version": "1.3",
  "description": "Auto-types clipboard text into inputs/contenteditable with Alt+T or context menu.",
  "permissions": ["scripting", "contextMenus", "activeTab", "clipboardRead"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
